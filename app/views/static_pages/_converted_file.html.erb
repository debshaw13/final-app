<% if converted_file.file.attached? %>
  <br>
  <br>

  <div class="row text-center">
    <h2>Download your converted file</h2>
    <%= link_to rails_blob_path(converted_file.file, disposition: 'attachment') do%>
      <button type="button" class="btn btn-primary">Download Converted PDF</button>
    <%end%>
  </div>

  <hr>

  <div class="row min-vh-100">
    <iframe src="<%= pdfjs.full_path(file: rails_blob_path(converted_file.file)) %>"></iframe>
  </div>
<% end %>
